<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentHome">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/student_home_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-80dp"
            android:src="@drawable/welcome_svg" />

        <TextView
            android:id="@+id/student_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:text="John Doe" />

        <TextView
            android:id="@+id/logged_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/student_home_text"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="You are logged in with:" />

        <TextView
            android:id="@+id/student_home_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logged_in_text"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="email@email.com" />
    </RelativeLayout>

</FrameLayout>